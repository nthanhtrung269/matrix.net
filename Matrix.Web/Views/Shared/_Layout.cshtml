                    <li><a asp-area="" asp-controller="Contact" asp-action="Index">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <br />
        <br />
        <br />
        <br />
        @RenderBody()
    </div>
    <nav class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a asp-area="" asp-controller="Copyright" asp-action="Index">Copyright (C) 2018 Paramesh Gunasekaran. All Rights Reserved.</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a asp-area="" asp-controller="Terms" asp-action="Index">Terms</a></li>
